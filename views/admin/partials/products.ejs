<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://rsms.me/" />
    <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.0.7/css/all.css"
    />
    <link rel="stylesheet" href="/public/stylesheets/tableStyle.css" />
    <title><%= locals.documentTitle %></title>
  </head>
  <body>
    <header>
      <div class="container-fluid header-top">
        <div
          class="container px-3 d-flex header-top-links justify-content-around"
        >
          <a class="px-3" href="/">Homepage</a>
          <div class="d-none d-lg-block">
            <span class="d-flex align-items-center">
              <i class="fab fa-instagram"></i>
              <i class="fab fa-facebook-f"></i>
              <i class="fab fa-twitter"></i>
              <i class="fab fa-whatsapp"></i>
            </span>
          </div>
        </div>
      </div>
      <nav
        class="container navbar navbar-expand-lg bg-white py-3 px-2 line-break"
      >
        <div class="container-fluid justify-content-around">
          <a class="navbar-brand d-flex align-items-center" href="/">
            <img
              src="/public/img/timeless-logo.png"
              alt="Logo"
              width="40"
              height="40"
              class="d-inline-block align-text-top"
            />
            <div class="brand-name ms-3">
              <span>TIMELESS</span>
            </div>
          </a>
        </div>
      </nav>
    </header>
    <section>
      <%- include('../layouts/head-links') %>

      <!-- Button trigger modal -->
      <div class="container d-flex justify-content-center my-3">
        <button
          type="button"
          class="btn btn-dark text-center"
          data-bs-toggle="modal"
          data-bs-target="#exampleModal"
        >
          Add New Product
        </button>
      </div>

      <!-- Modal -->
      <div
        class="modal fade"
        id="exampleModal"
        tabindex="-1"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
        data-bs-backdrop="static"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">
                Add New Product
              </h1>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
                
                <!-- -------------------- -->


                <form action="product_management/add_product" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                      <input
                        type="text"
                        class="form-control"
                        id="form-holder"
                        name="name"
                        placeholder="Name"
                        required
                      />
                    </div>
                    <div class="mb-3">
                        <label for="HeroImage" class="px-1" style="font-size: 0.75rem;">Upload Hero Image</label>
                      <input
                        class="form-control"
                        id="form-holder"
                        name="heroImage"
                        type="file"
                        required
                      />
                    </div>
                    <div class="mb-3">
                      <label for="images" class="px-1" style="font-size: 0.75rem;">Upload 3 Images</label>
                    <input
                      class="form-control"
                      id="images"
                      name="images"
                      type="file"
                      multiple
                    />
                  </div>
                    <div class="mb-3">
                      <select id="inputState" class="form-control" name="categoryID"> 
                        <option selected>Choose category</option> 
                        <%categories.forEach((data)=>{%> 
                          <option value="<%=data._id%>"><%=data.name%></option> 
                        <%})%> 
                      </select>
                    </div>
                    <div class="mb-3">
                      <input
                        type="text"
                        class="form-control"
                        id="form-holder"
                        placeholder="Brand"
                        name="brand"
                        required
                      />
                    </div>
                    <div class="mb-3">
                        <input
                          type="text"
                          class="form-control"
                          id="form-holder"
                          placeholder="Color"
                          name="color"
                          required
                        />
                      </div>
                    <div class="mb-3">
                        <input
                          type="number"
                          class="form-control"
                          id="form-holder"
                          placeholder="Price"
                          name="price"
                          required
                        />
                      </div>
                      <div class="mb-3">
                        <input
                          type="number"
                          class="form-control"
                          id="form-holder"
                          placeholder="Stock"
                          name="stock"
                          required
                        />
                      </div>
                      <div class="mb-3">
                        <input
                          type="number"
                          class="form-control"
                          id="form-holder"
                          placeholder="Reference Number"
                          name="refNumber"
                          required
                        />
                      </div>
                      <div class="mb-3">
                        <input
                          type="text"
                          class="form-control"
                          id="form-holder"
                          placeholder="Model Case"
                          name="modelCase"
                          required
                        />
                      </div>
                      <div class="mb-3">
                        <input
                          type="text"
                          class="form-control"
                          id="form-holder"
                          placeholder="Water Resistance"
                          name="waterRes"
                          required
                        />
                      </div>
                      <div class="mb-3">
                        <input
                          type="text"
                          class="form-control"
                          id="form-holder"
                          placeholder="Movement"
                          name="movement"
                          required
                        />
                      </div>
                      <div class="mb-3">
                        <input
                          type="text"
                          class="form-control"
                          id="form-holder"
                          placeholder="Power Reserve"
                          name="powerRes"
                          required
                        />
                      </div>
                      <div class="mb-3">
                        <input
                          type="text"
                          class="form-control"
                          id="form-holder"
                          placeholder="Bracelet"
                          name="bracelet"
                          required
                        />
                      </div>
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Close
                  </button>
                  <button type="submit" class="btn btn-success">
                    Save changes
                  </button>
                  </form>


<!-- ------------------- -->
            
            </div>
          </div>
        </div>
      </div>

      <!-- Responsive data table -->
      <div class="card-body container">
        <table id="datatablesSimple">
          <thead>
            <tr>
              <th>Name</th>
              <th>Image</th>
              <th>Category</th>
              <th>Brand</th>
              <th>Price ₹ x1000</th>
              <th>Stock</th>
              <th>Action</th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th>Name</th>
              <th>Image</th>
              <th>Category</th>
              <th>Brand</th>
              <th>Price ₹ x1000</th>
              <th>Stock</th>
              <th>Action</th>
            </tr>
          </tfoot>
          <% if(products !=null){ %>
          <tbody>
            <% products.forEach(function(item){ %>
            <tr>
              <td><%= item.name %></td>
              <td class="text-center"><img src="/public/img/products/<%= item.heroImage %>" alt="" width="120px" height="80px"></td>
              <td><%= item.category.name %></td>
              <td><%= item.brand %></td>
              <td><%= item.price %></td>
              <td><%= item.stock %></td>
              <td class="text-center d-flex flex-column">
                <a href="/admin/product_management/edit?id=<%= item._id %>" onclick="return confirm('Proceed to edit <%= item.name %> ?')" class="btn btn-dark text-white btn-sm my-1">Edit</a>
                <% if(item.listed==true){ %> 
                <a href="/admin/product_management/changeListing?id=<%= item._id %>" onclick="return confirm('Proceed to change listing of <%= item.name %> ?')" class="btn btn-danger text-white btn-sm  my-1">Unlist</a>
              <% }else{ %>
                <a href="/admin/product_management/changeListing?id=<%= item._id %>" onclick="return confirm('Proceed to change listing of <%= item.name %> ?')" class="btn btn-success text-white btn-sm my-1">List</a>
                <% } %></td>
            </tr>
            <% }) %>
          </tbody>
          <% } %>
        </table>
      </div>
    </section>
    <footer class="bg-theme">
      <div
        class="container links pt-4 pb-2 row mx-auto line-break d-flex justify-content-around"
      >
        <a class="col-lg-3 pb-2 text-center" href="#">Track Shipping</a>
        <a class="col-lg-3 pb-2 text-center" href="#">Contact Us</a>
        <a class="col-lg-3 pb-2 text-center" href="#">Customer Care</a>
        <a class="col-lg-3 pb-2 text-center" href="#">About us</a>
      </div>
      <div class="copyright bg-theme py-2 text-center">
        <span>Copyright © 2022 | Timeless</span>
      </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/public/javascript/js/scripts.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/simple-datatables@latest"
      crossorigin="anonymous"
    ></script>
    <script>
      window.addEventListener("DOMContentLoaded", (event) => {
        const datatablesSimple = document.getElementById("datatablesSimple");
        if (datatablesSimple) {
          new simpleDatatables.DataTable(datatablesSimple);
        }
      });
    </script>
  </body>
</html>
